post-extract:
	@${MV} ${WRKSRC}/config0.m4 ${WRKSRC}/config.m4
.endif

.if ${PHP_MODNAME} == "oci8" || ${PHP_MODNAME} == "pdo_oci"
pre-configure:
	@cd ${WRKSRC}; \
	for lib in ${LOCALBASE}/oracle8-client/lib/libclntsh /usr/lib/libpthread; do \
		/usr/bin/ar x $${lib}.a; \
	done; \
	/usr/bin/ar rcs liboci8.a *.o
.endif

