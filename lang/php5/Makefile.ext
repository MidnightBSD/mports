.include <bsd.port.pre.mk>

.if ${PHP_MODNAME} == "dba"
.	if defined(WITHOUT_CDB)
CONFIGURE_ARGS+=--without-cdb
.	endif
.	if defined(WITH_DB4)
WITH_DB4_VER?=	46
