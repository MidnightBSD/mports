# $MidnightBSD$

PORTNAME=	talksoup
PORTVERSION=	1.1
PORTREVISION=	0
CATEGORIES=	irc gnustep
MASTER_SITES=	http://savannah.nongnu.org/download/gap/
DISTNAME=	TalkSoup-${PORTVERSION}

MAINTAINER=	ports@MidnightBSD.org
COMMENT=	IRC client for GNUstep

LICENSE=	gpl2

LIB_DEPENDS+=	libnetclasses.so:${PORTSDIR}/net/netclasses

USES=		gnustep
USE_GNUSTEP=	back build
USE_GNUSTEP_INSTALL=	yes
USE_GNUSTEP_LDCONFIG=	${GNUSTEP_SYSTEM_LIBRARIES}

WRKSRC=		${WRKDIR}/${DISTNAME}
MAKE_ENV+=	GNUSTEP_INSTALLATION_DIR=${GNUSTEP_SYSTEM_ROOT}
PLIST_SUB+=	APPVERSION=0.990

LDFLAGS+=	-L${GNUSTEP_SYSTEM_LIBRARIES}

.include <bsd.port.mk>
