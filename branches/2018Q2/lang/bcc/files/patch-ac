! CFLAGS		=-O -DNSIG=32
  LDFLAGS 	=
  
! bcc: bcc.c
! 	$(CC) $(CFLAGS) $(LDFLAGS) $@.c -o $@
  
! bcc09: bcc.c
! 	$(CC) -DMC6809 $(CFLAGS) $(LDFLAGS) bcc.c -o $@
  
! ccc: bcc.c
! 	$(CC) -DCCC $(CFLAGS) $(LDFLAGS) bcc.c -o $@
  
! clean:
! 	rm -f bcc bcc09 ccc
