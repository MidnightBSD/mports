#!/bin/sh
#
# $MidnightBSD$

CVSSERVER="${PKG_PREFIX-/usr/local}/bin/cvs_server"
SHELLS="${PKG_DESTDIR-}/etc/shells"

case $2 in
POST-INSTALL)
  if [ -d "${SHELLS%/*}" ] && ! grep -qs "^$CVSSERVER\$" "$SHELLS"; then
    if [ `id -u` -eq 0 ]; then
      echo "$CVSSERVER" >> "$SHELLS"
    else
      echo "Not root, please add $CVSSERVER to $SHELLS manually"
    fi
  fi
  ;;
esac
