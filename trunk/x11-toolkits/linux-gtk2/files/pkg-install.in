#!/bin/sh

PATH=/bin:/usr/bin:/sbin:/usr/sbin
export PATH

case $2 in
POST-INSTALL)
    echo -n "Creating pixbuf loaders list... "
    chroot /compat/linux usr/bin/gdk-pixbuf-query-loaders-32 > /compat/linux/etc/gtk-2.0/i386-redhat-linux-gnu/gdk-pixbuf.loaders
    echo "done."
    
    echo -n "Creating module list... "
    chroot /compat/linux usr/bin/gtk-query-immodules-2.0-32 > /compat/linux/etc/gtk-2.0/i386-redhat-linux-gnu/gtk.immodules
    echo "done."
    
    ;;
esac
