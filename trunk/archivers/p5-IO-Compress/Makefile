		p5-Compress-Raw-Zlib>=2.037:${PORTSDIR}/archivers/p5-Compress-Raw-Zlib

CONFLICTS=	p5-Compress-Zlib-2* p5-IO-Compress-Base-2* p5-IO-Compress-Zlib-2* p5-IO-Compress-Bzip2-2*

