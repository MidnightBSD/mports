		IO::Uncompress::Base.3 \
		IO::Uncompress::Bunzip2.3 \
		IO::Uncompress::Gunzip.3 \
		IO::Uncompress::Inflate.3 \
		IO::Uncompress::RawInflate.3 \
		IO::Uncompress::Unzip.3

