#!/bin/sh
#
# ex:ts=4:sw=4:noet
#-*- mode: makefile; tab-width: 4; -*-
#
# $MidnightBSD$

if [ "$2" = "DEINSTALL" ]; then
	FILE="/etc/services"
	echo "===>   Removing spamd entries from ${FILE}"
	sed -i '' \
		-e "/^spamd-sync.*8025/d" \
		-e "/^spamd-cfg.*8026/d" \
		-e "/^spamd.*8025/d" \
		${FILE}
fi
