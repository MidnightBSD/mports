USES=		cpe linux:rl9
USE_LDCONFIG=	yes
USE_LINUX=	elfutils-libelf python3
USE_LINUX_RPM=	yes
WANT_LINUX32=yes

BIN_DISTNAMES=	${PORTNAME}-${DISTVERSIONFULL}
LIB_DISTNAMES=	${PORTNAME}-devel-${DISTVERSIONFULL}
# src rpm is missing
SRC_DISTFILES=

DOCSDIR=	${PREFIX}/usr/share/doc/${PORTNAME}${PKGNAMESUFFIX}-${PORTVERSION}

PLIST_SUB=	LIBVERSION=${PORTVERSION:R} BINVERSION=${PORTVERSION:R:R} FULLVERSION=${PORTVERSION}

.include <bsd.port.mk>
