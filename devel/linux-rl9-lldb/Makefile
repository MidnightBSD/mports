DISTVERSIONSUFFIX=	-3.el9
CATEGORIES=	devel linux

MAINTAINER=	ports@MidnightBSD.org
COMMENT=	The LLVM Debugger for LLVM suite (Rocky Linux ${LINUX_DIST_VER})
