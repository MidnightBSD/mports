PORTNAME=	lusernet
PORTVERSION=	0.4.2
PORTREVISION=	1
CATEGORIES=	news gnustep
MASTER_SITES=	${MASTER_SITE_FREEBSD_LOCAL}
MASTER_SITE_SUBDIR=	dinoex
DISTNAME=	LuserNET-${PORTVERSION}

