COMMENT=	Create an index of X font files in a directory
LICENSE=	unknown

RUN_DEPENDS=	mkfontscale:${PORTSDIR}/x11-fonts/mkfontscale

XORG_CAT=	app

PLIST_FILES=	bin/mkfontdir
MAN1=		mkfontdir.1

